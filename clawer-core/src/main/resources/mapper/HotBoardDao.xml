<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.webmagic.dao.HotBoardDao" >

    <resultMap id="BaseResultMap" type="com.webmagic.entity.HotBoardInfo" >
        <result column="move_name" property="moveName" jdbcType="VARCHAR" />
        <result column="move_star" property="moveStars" jdbcType="VARCHAR" />
        <result column="move_score" property="moveScore" jdbcType="VARCHAR" />
        <result column="release_time" property="releaseTime" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
    move_name,move_star,move_score,release_time
  </sql>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String" >
        select
        <include refid="Base_Column_List" />
        from t_movie_info
        where move_name = #{moveName,jdbcType=VARCHAR}
    </select>

    <select id="getAllMovies" resultMap="BaseResultMap" >
        select
        <include refid="Base_Column_List" />
        from t_movie_info
    </select>

    <!--
    <select id="getAllMoviesByName" parameterType="java.util.Map" resultMap="BaseResultMap"  statementType="CALLABLE">
        {call pro_get_movies(
          #{searName,jdbcType=VARCHAR,mode=IN}
       )
      }
    </select>
-->

    <delete id="deleteByPrimaryKey" parameterType="java.lang.String" >
    delete from t_movie_info
    where move_name = #{moveName,jdbcType=VARCHAR}
  </delete>

    <insert id="insert" parameterType="com.webmagic.entity.HotBoardInfo" >
    insert into t_movie_info (move_name, move_star,
      move_score, release_time
      )
    values (#{moveName,jdbcType=VARCHAR}, #{moveStars,jdbcType=VARCHAR},
      #{moveScore,jdbcType=VARCHAR}, #{releaseTime,jdbcType=VARCHAR})
  </insert>



</mapper>